{% extends 'base.html.twig' %}

{% block title %}Bob-Aventure -
	{{article.title}}
{% endblock %}

{% block body %}
	{% include 'assets/header.html.twig' %}
	<main class="bgc-primary">
		<section class="hero-news-details" style="background-image: url('{{ vich_uploader_asset(article, 'main_image_file') }}');">
			<div class="container">
				<div class="hero-news-details-content font-light">
					<a href="#" class="btn-news-details font-light">
						<i class="fa-solid fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Rejoindre l'aventure</a>
					<h1 class="mt-4">{{ article.title }}</h1>
					<div class="d-flex gap-4">
						<p class="opacity-75">
							<i class="fa-solid fa-calendar"></i>&nbsp;&nbsp;{{ article.publishedAt|date('d/m/Y') }}</p>
						<p class="badge">{{ article.category.name }}</p>
					</div>
				</div>
			</div>
		</section>

        <section class="news-details-content py-5">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <p>{{ article.content|raw }}</p>
                    </div>
                </div>
            </div>
        </section>
	</main>
	{% include 'assets/footer.html.twig' %}
{% endblock %}

