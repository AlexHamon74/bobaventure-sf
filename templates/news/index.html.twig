{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
	{% include 'assets/header.html.twig' %}
    <main class="bgc-primary">
        <section class="hero-news py-5">
            <div class="container">
                <h1>Toutes les Actualités</h1>
                <p>Suivez toutes nos aventures et nos actions sur le terrains</p>
            </div>
        </section>

        <section class="form-search my-5">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping"><i class="fa-solid fa-magnifying-glass"></i></span>
                            <input type="text" class="form-control" placeholder="Rechercher" aria-label="rechercher " aria-describedby="addon-wrapping">
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <button class="badge-form me-2 px-2">
                            <span>Tous</span>
                        </button>
                        <button class="badge-form me-2 px-2">
                            <span>Annonce</span>
                        </button>
                        <button class="badge-form me-2 px-2">
                            <span>Raid</span>
                        </button>
                        <button class="badge-form me-2 px-2">
                            <span>Solidarité</span>
                        </button>
                    </div>
                </div>
            </div>
        </section>
        
        <section class="actus">
            <div class="container">
                <div class="row">
                {% for article in articles %}
                    <div class="col-lg-4 col-12 mb-5">
                        <div class="card-actus position-relative">
                            <span class="badge position-absolute top-0 end-0 m-2">{{ article.category.name }}</span>
                            <img class="card-actus-img" src="{{ vich_uploader_asset(article, 'main_image_file') }}" alt="{{ article.title }}">
                            <div class="card-actus-content p-4">
                                <p><i class="fa-solid fa-calendar"></i>&nbsp;&nbsp;{{ article.publishedAt|date('d/m/Y') }}</p>
                                <h3>{{ article.title }}</h3>
                                <p class="text-truncate-2">{{ article.content }}</p>
                                <a class="d-block" href="{{ path('app_news_details', {'id': article.id}) }}">Lire la suite&nbsp;&nbsp;&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <h4 class="mb-5">Aucun article disponible pour le moment.</h4>
                {% endfor %}
                </div>
            </div>
        </section>
    </main>
    {% include 'assets/footer.html.twig' %}
{% endblock %}
