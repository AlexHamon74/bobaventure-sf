{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
{% include 'assets/header.html.twig' %}
<main class="bgc-linear-primary">
    <section class="d-flex align-items-center justify-content-center py-5">
        <div class="container container-auth bgc-secondary p-5 shadow mx-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                
                {% include "assets/flash.html.twig" %}

                <h1>Connexion</h1>
                <p>Connectez-vous à votre compte BOB Aventure</p>

                <label class="form-label" for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>

                <label class="form-label" for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control mb-1" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
                    <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                </div>

                <button class="submit-button w-100" type="submit">
                    Se connecter
                </button>

                <p class="mt-3 text-center">Vous avez oublié votre mot de passe ?
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
                </p>

                <p class="mt-3 text-center">Vous n'avez pas de compte ? 
                    <a href="{{path('app_register')}}">S'enregistrer</a>
                </p>
            </form>
        </div>
    </section>
</main>
{% include 'assets/footer.html.twig' %}
{% endblock %}
