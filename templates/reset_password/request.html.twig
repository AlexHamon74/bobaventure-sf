{% extends 'base.html.twig' %}

{% block title %}Bob-aventure - Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% include 'assets/header.html.twig' %}

    <section class="bg-auth">
        <div class="container container-login bgc-secondary">

            {{ form_start(requestForm) }}

            <h1>Mot de passe oublié</h1>
            <p>Entrez votre email pour recevoir un lien de réinitialisation</p>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert-custom">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <div class="mb-3">
                {{ form_label(requestForm.email, 'Email') }}
                {{ form_widget(requestForm.email, {attr: {placeholder: 'Votre adresse email'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <button type="submit" class="submit-button w-100">Envoyer le lien</button>

            <p class="mt-3 text-center">
                <a href="{{ path('app_login') }}">Retour à la connexion</a>
            </p>

            {{ form_end(requestForm) }}

        </div>
    </section>

    {% include 'assets/footer.html.twig' %}
{% endblock %}